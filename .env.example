# 环境变量配置文件
# 复制此文件为 .env 并修改相应的值

# ==================== 应用环境 ====================
APP_ENV=development  # development / production / testing

# ==================== 数据库配置 ====================
DATABASE_URL=sqlite:///./data/database.db

# ==================== 加密密钥 ====================
# 生产环境务必修改此密钥！
# 可使用 Python: import secrets; secrets.token_hex(32)
ENCRYPTION_KEY=change-this-in-production-use-secrets-token-hex-32

# ==================== OTA 更新服务器 ====================
UPDATE_SERVER_URL=https://your-update-server.com/api
UPDATE_CHECK_INTERVAL=3600  # 秒

# ==================== 日志配置 ====================
LOG_LEVEL=DEBUG  # DEBUG / INFO / WARNING / ERROR / CRITICAL
LOG_FILE=logs/eaip_viewer.log
LOG_ROTATION=10 MB  # 日志文件大小限制
LOG_RETENTION=30 days  # 日志保留时间

# ==================== QML 调试 ====================
QML_DEBUG=1  # 开发时启用
QML_HOT_RELOAD=0  # 热重载功能（实验性）
QT_LOGGING_RULES=*.debug=true;qt.qml.binding.removal.info=true

# ==================== 性能配置 ====================
CACHE_SIZE_MB=100  # 缓存大小（MB）
MAX_WORKERS=4  # 最大工作线程数
PDF_RENDER_DPI=150  # PDF 渲染 DPI

# ==================== 安全配置 ====================
SESSION_EXPIRE_DAYS=30  # 会话过期天数
MAX_LOGIN_ATTEMPTS=5  # 最大登录尝试次数
LOCKOUT_MINUTES=15  # 锁定时间（分钟）
